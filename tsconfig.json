{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"ES2022",
			"WebWorker"
		],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			],
			"$test": [
				"./test"
			],
			"$test/*": [
				"./test/*"
			],
			"$types": [
				"./src/types"
			],
			"$types/*": [
				"./src/types/*"
			]
		},
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es2022",
		"types": [
			"./worker-configuration.d.ts",
			"node"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	]
}